unit Unit5;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls;

type
  TForm5 = class(TForm)
    Label1: TLabel;
    RadioGroup1: TRadioGroup;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form5: TForm5;
   c:real;
implementation

uses Unit2;

{$R *.dfm}

procedure TForm5.Button1Click(Sender: TObject);
begin

case RadioGroup1.ItemIndex of

  0:
  begin
    c:=0;
  end;

  1:
  begin
    c:=0;
  end;

  2:
  begin
     c:=0;
  end;

  3:
  begin
     c:=5;
  end;

  4:
  begin
     c:=0;
  end;

  5:
  begin
     c:=0;
  end;
end;
  RadioGroup1.ItemIndex:= -1;
  Form2.pergunta;
  Form5.Close;
 end;
end.
